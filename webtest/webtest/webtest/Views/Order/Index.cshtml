@model webtest.Models.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_customLayout.cshtml";
}

<head>
    <link href="~/Content/Order.css" rel="stylesheet" type="text/css" />
</head>

<div class="order-card">
    <form action="/Payment" method="get">
        <div class="info-card">
            <div class="info-form">
                <h1> Personal information</h1>
                <input type="text" id="name" name="name" placeholder="Name">
                <input type="text" id="surname" name="surname" placeholder="Surname">
                <input type="text" id="email" name="email" placeholder="Email">
                <input type="text" id="phone" name="phone" placeholder="Phone number">
            </div>

            <div class="info-form">
                <h1>Address information</h1>
                <input type="text" id="street" name="street" placeholder="Street">
                <input type="text" id="housenumber" name="housenumber" placeholder="House number">
                <input type="text" id="city" name="city" placeholder="City">
                <input type="text" id="zipcode" name="zipcode" placeholder="Zip code">
                <input type="text" id="country" name="country" placeholder="Country">
            </div>
            <label>
                <input type="checkbox" name="saveinfo"> 
                    "Save information for next time"
            </label>
        </div>
        <input type="submit" value="Continue to Payment" class="btn">
    </form>
</div>