
@using PagedList;
@using PagedList.Mvc;
@model List<webtest.Models.Order>
@using webtest.Models;
@{
    ViewBag.Title = "OrderHistory";
    Layout = "~/Views/Shared/_customLayout.cshtml";
}

<h2>OrderHistory</h2>

<div id="container">
    <div id="results">

        <img id="stripe" src="~/Content/Images/stripe.png" />

        <!-- SHOW ORDERS-->
        <!-- Check of er ORDERS zijn gevonden-->
        @if (Model.Count == 0)
        {
            <text> You haven't done any orders yet</text>
        }
        <table>
            @foreach (var m in Model)
            {
                <tr>
                    <td>m.Order_id</td>
                    <td>m.Order_status</td>
                    <td>OrderDate</td>
                </tr>
            }</table>
</div>
    </div>

