
@using PagedList;
@using PagedList.Mvc;
@model List<webtest.Models.Order>
@using webtest.Models;
@{
    ViewBag.Title = "OrderHistory";
    Layout = "~/Views/Shared/_customLayout.cshtml";
    <head>
        <link href="~/Content/OrderHistory.css" rel="stylesheet" />
    </head>
}

<h2>OrderHistory</h2>

<div id="container">
    <div id="results">

        <img id="stripe" src="~/Content/Images/stripe.png" />

        <!-- SHOW ORDERS-->
        <!-- Check of er ORDERS zijn gevonden-->
        @if (Model.Count == 0)
        {
            <text> You haven't done any orders yet</text>
        }
        <table>
            <tr>
                <th>Order Id</th>
                <th>Order status</th>
                <th>Order Date</th>
                <th>Order Details</th>
            </tr>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.Order_id</td>
                    <td>@m.Order_status</td>
                    <td>@m.OrderDate</td>
                    <td>@Html.ActionLink("Order details","OrderDetails",null, new { id = m.OrderDetails_id, style = "color:Blue"})</td>
                </tr>
            }
        </table>
    </div>
</div>

